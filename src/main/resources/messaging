addSecuritySettingRole.refresh=true
addSecuritySettingRole.precedence=60

match.addSecuritySettingRoleAttr=add:/messaging/hornetq-server/*/security-setting/*/role/*/*
addSecuritySettingRoleAttr.rule=/subsystem=messaging/hornetq-server=${name(../../../../..)}/security-setting=${name(../../..)}/role=${name(..)}:write-attribute(name=${name(.)}, value=${value(.)})
